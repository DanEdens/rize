{
  "verbose": true,
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testEnvironment": "node",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],
  "testRegex": "(/tests/e2e/.*|(\\.|/)(test|spec))\\.ts$",
  "testPathIgnorePatterns": [
    "/node_modules/",
    ".*\\.fixture.*"
  ]
}
