{
  "extends": "@gplane/tsconfig",
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es5",
      "es2015.collection",
      "es2015.core",
      "es2015.iterable",
      "es2015.promise",
      "es2015.symbol",
      "es2016.array.include",
      "dom"
    ],
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "rize": ["./src"],
      "rize/*": ["./src/*"]
    },
    "strictFunctionTypes": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*.ts"
  ]
}
